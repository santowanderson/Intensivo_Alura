var nome = "Wanderson"
var notaDoPrimeiroBimestre = 9
var notaDoSegundoBimestre = 6
var notaDoTerceiroBimestre = 7
var notaDoQuartoBimestre = 8

var notaFinal = (notaDoPrimeiroBimestre + notaDoSegundoBimestre + notaDoTerceiroBimestre + notaDoQuartoBimestre) / 4

var notaFixada = notaFinal.toFixed(1)
console.log("Bem vindo " + nome)
console.log(notaFixada)

//              Revisão

//Variável= palavra q guardamos na memória
//String= texto (representado por "")
//console.log= faz a impressão no console
//toFixed= denomina quantas casas decimais queremos usar
